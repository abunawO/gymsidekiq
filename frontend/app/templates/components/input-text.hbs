<fieldset class='input-text'>
    <label for={{@label}}>{{@label}}</label>
    <div class='input-text-content'>
        <input onfocus={{action "onfocus"}} onblur={{action "onblur"}} type={{or @type "text"}} id={{@label}}
            value={{@value}} placeholder={{@placeholder}} autofocus={{@autofocus}}>
    </div>
</fieldset>