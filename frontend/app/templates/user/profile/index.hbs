<div class="page-grid-system profile-layout">
  <div class="trainers-create">
    <button {{action "createProfile"}}>Create Profile</button>
  </div>
  <div class="profile-section wide placeholder">
    <h2>Placeholder</h2>
  </div>

  <div class="profile-section tall classes">
    <h2>Classes</h2>
    {{#each userProfiles.firstObject.klasses as |class|}}
    <div class="profile-section-item">
      <h3>{{class.title}}</h3>
    </div>
    {{/each}}
  </div>

  <div class="profile-section tall trainers">
    <h2>Trainers</h2>
    {{#each userProfiles.firstObject.trainers as |trainer|}}
    <div class="profile-section-item">
      <h3>{{trainer.fullName}}</h3>
    </div>
    {{/each}}
  </div>

  <div class="profile-section tall members">
    <h2>Members</h2>
    {{#each userProfiles.firstObject.members as |member|}}
    <div class="profile-section-item">
      <h3>{{member.fullName}}</h3>
    </div>
    {{/each}}
  </div>
</div>
