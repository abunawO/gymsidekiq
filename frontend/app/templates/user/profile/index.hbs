<div class="page-grid-system profile-layout">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <div class="profile-section wide placeholder">
    <h2>Placeholder</h2>
  </div>

  <div class="profile-section tall classes">
    <h2>Class Check Ins</h2>
    <h5>{{formattedDate}}</h5>
    {{#each profileKlasses as |class|}}
    <div class="profile-section-item">
      <h4>{{class.title}}</h4>
    </div>
      {{#each class.attendances as |attendance|}}
        <div class="profile-section-item">
          <label>{{attendance.checkInDateString}}</label><br>
          <label>Member: {{attendance.member.fullName}}</label><br>
          {{#if attendance.member.hasGoodStatus}}
            <label>Membership status:
              <div style="width: 70px;"class="w3-light-grey">
                <div class="w3-green" style="height:24px;width:100%">Good</div>
              </div>
            </label>
          {{/if}}
          {{#unless attendance.member.hasGoodStatus}}
            <label>Membership status:
              <div style="width: 70px;"class="w3-light-grey">
                <div class="w3-red" style="height:24px;width:100%">Danger</div>
              </div>
            </label>
          {{/unless}}
        </div>
      {{/each}}
    {{/each}}
  </div>

  <div class="profile-section tall trainers">
    <h2>Trainers</h2>
    {{#each profileTrainers as |trainer|}}
    <div class="profile-section-item">
      <h3>{{trainer.fullName}}</h3>
      <img id="trainers-image-display" src="{{trainer.image.url}}" height="100" width="100">
    </div>
    {{/each}}
  </div>

  <div class="profile-section tall members">
    <h2>Members</h2>
    {{#each profileMembers as |member|}}
    <div class="profile-section-item">
      <h3>{{member.fullName}}</h3>
      <img id="members-image-display" src="{{member.image.url}}" height="100" width="100">
      <h1>Membership Plan:</h1>{{member.membershipType}} ${{member.monthlyPrice}}
    </div>
    {{/each}}
  </div>
</div>
