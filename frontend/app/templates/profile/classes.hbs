<style>

#members {
  font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#members td, #members th {
  border: 1px solid #ddd;
  padding: 8px;
}

#members tr:nth-child(even){background-color: #f2f2f2;}

#members tr:hover {background-color: #ddd;}

#members th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: #4CAF50;
  color: white;
}
</style>

{{route-links}}

<h1>Listing Profile Classes</h1>

<table id="members">
  <thead>
    <tr>
      <th>Class Title</th>
    </tr>
  </thead>

  <tbody>
    {{#each profileClasses as |class|}}
      <tr>
        <td>{{class.title}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
