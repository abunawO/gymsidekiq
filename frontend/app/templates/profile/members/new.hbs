{{route-links}}

<div class="main-containercontainer">
  <form id="contact" action="" method="post">
    <h3>Create New Member</h3>
    <fieldset>
      {{input type="text" value=firstName placeholder="first Name" autofocus=true}}
    </fieldset>
    <fieldset>
      {{input type="text" value=lastName placeholder="Last Name" }}
    </fieldset>
    <fieldset>
      {{input type="text" value=address placeholder="Address" }}
    </fieldset>
    <fieldset>
      {{input type="text" value=city placeholder="City" }}
    </fieldset>
    <fieldset>
      {{input type="text" value=state placeholder="State"  }}
    </fieldset>
    <fieldset>
      {{input type="text" value=zip placeholder="Zip"  }}
    </fieldset>
    <fieldset>
      {{input type="email" value=email placeholder="Email Address"  }}
    </fieldset>
    <fieldset>
      {{input type="tel" value=phone placeholder="Your Phone Number"  }}
    </fieldset>
    <fieldset>
      <h4>Membership Type</h4>
      {{#each profile.plans as |plan|}}
        <label>
          {{gs-radio name=plan.title class="profile_section" id=plan.id value=plan.id  data=plan.id callbackAction='setPlanId'}}
          <span style="font-weight: normal;">{{plan.title}}</span>
        </label>
      {{/each}}

    </fieldset>
    <fieldset>
      <button {{action "createNewMember"}} name="submit" type="submit" id="contact-submit"
        data-submit="...Sending">Submit
      </button>
    </fieldset>
    <div class="checkbox-label">
      {{input type="checkbox" name="accept_terms" id="terms-of-use-checkbox" aria-label="accept terms" required=true checked=accept_terms }}
      Accept
      <a target="_blank"
        href="http://www.finsync.com/wp-content/uploads/2019/02/Policy-Terms-of-Use-Updated-2.7.2019.pdf">Terms of
        Use</a><span class="required-marker">*</span>&nbsp;
    </div>
    {{copyright-footer}}
  </form>
</div>
